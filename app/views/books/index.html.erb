


<h1>New book</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>

<header>
  <h1>Books</h1>
</header>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>


 <% @books.each do |book| %>
 <tr>
   <td><%= image_tag book.user.get_profile_image(100,100) %></td>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
 </tr>
 <% end %>
</table>

