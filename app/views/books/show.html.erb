<p>bookshow</p>
<div class="container px-5 px-sm-0">
<div class="row">

<div class="col-md-3">
<%= render 'new', user: @user, book: @book_new %>
</div>

<div class="col-md-8 offset-md-1">
<table class="table">

  <h1>Book detail</h1>

<tr>
  <td><%= image_tag @book.user.get_profile_image(100,100) %><br><%= link_to @user.name, user_path(@user.id) %></td>

  <td><%= link_to @book.title, book_path(@book.id) %></td>
  <td><%= @book.body %></td>
  <% if @book.user == current_user %>
<td>
<button type="button" class="btn btn-success">
  <%= link_to "Edit", edit_book_path(@book.id), class: "text-light" %>
</button>
</td>
<td>
<button type="button" class="btn btn-danger">
   <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class: "text-light" %>
</button>
</td>
  <% end %>

</tr>

</table>
　　</div>
  </div>
</div>

