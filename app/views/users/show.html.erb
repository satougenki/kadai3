
<div>
 <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
   <h3>name <%= @user.name %></h3>
   <h3>introduction   <%= @user.introduction %></h3>
   
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
<!-- ユーザーの投稿一覧 -->
<header>
  <h1>Books</h1>
</header> 

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

 
 <% @books.each do |book| %>
 <tr>
   <td><%= image_tag book.user.get_profile_image(100,100) %></td>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
 </tr>
 <% end %>
</table> 